<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Cuploader | Uploader Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/water.css@2/out/dark.css">
</head>
<body style="font-family: Calibri;">
    <div style="margin-left: 10px; margin-right: 10px;"> 
        <center>
            <div style="overflow: hidden;">
                <div style="float: left;">
                    <h2 style="font-weight: 500;">Uploader Page</h2>
                </div>
                <div  style="float: right;">
                    <h2 style="font-weight: 500;">Ch4rlzki</h2>
                </div>
            </div>
            <form action="https://cuploader.charlzk.repl.co/upload" method="post" enctype="multipart/form-data">
                <div style="padding: 10px; background-color: #0f0f0f; border-radius: 5px;">
                  <div style="overflow: hidden;">
                      <h3 style="font-weight: 500; float: left; margin-left: 10px;">Uploade file:</h3>
                  </div>
                    <input type="file" name="file" id="fileBox" required>
                    <div style="margin-top: 10px;">
                      <input type="submit" value="Upload File" id="submitButton" style="width: 100%;">
                    </div>
                </div>
            </form>
            <hr style="margin-top: 20px; margin-bottom: 20px;">
            <div style="overflow: hidden;">
                  <div style="float: left;">
                      <h2 style="font-weight: 500;">Download File</h2>
                  </div>
            </div>
            <form action="https://cuploader.charlzk.repl.co/download" method="get">
                <div style="background-color: #0f0f0f; padding: 10px; border-radius: 5px; overflow: hidden;">
                    <div style="overflow: hidden;">
                        <h3 style="font-weight: 500; float: left; margin-left: 10px;">File name </h3>
                    </div>
                    <div style="margin-top: 10px;">
                        <input type="text" name="filename" placeholder="Filename ... " style="width: 95%;" required>
                    </div>
                    <div style="margin-top: 10px;">
                        <input type="submit" value="Download File" style="width: 100%;">
                        <button type="button" id="filesList" style="width: 100%;">View Files</button>
                    </div>
                </div>
            </form>
            <hr style="margin-top: 20px; margin-bottom: 20px;">
            <div style="overflow: hidden;">
                <div style="float: left;">
                    <h2 style="font-weight: 500;">Go to page</h2>
                </div>
            </div>
            <form action="https://cuploader.charlzk.repl.co/page" method="get">
              <div style="background-color: #0f0f0f; padding: 10px; border-radius: 5px; overflow: hidden;">
                <div style="overflow: hidden;">
                    <h3 style="font-weight: 500; float: left; margin-left: 10px;">Page name </h3>
                </div>
                <div style="margin-top: 10px;">
                    <input type="text" id="pageNameBox" name="name" placeholder="Page name ..." style="width: 95%;" required>
                </div>
                <div style="margin-top: 10px;">
                  <input type="submit" style="width: 100%;" value="Go to page">
                  <button type="button" id="pagesList" style="width: 100%;">View Files</button>
              </div>
            </form>
        </center>
        <center>
          <div style="margin-top: 20px; margin-bottom: 20px;">
            <div>
              <a href="https://cuploader.charlzk.repl.co/v2">Go to v2</a>
            </div>
            <font style="color: gray;">Â© 2022-23</font>
          </div>
        </center>
    </div>
    <script>
        const fileBox = document.getElementById("fileBox");
        const filesList = document.getElementById("filesList");
        const submitButton = document.getElementById("submitButton");
        const pageNameBox = document.getElementById("pageNameBox");
        const pagesList = document.getElementById("pagesList");

        fileBox.addEventListener("input", function() {
          if (/[#%{}<>*?!'"@$+`|=]/.test(fileBox.value)) {
            submitButton.disabled = true;
          } else {
            submitButton.disabled = false;
          }
        });

        pagesList.addEventListener("click", function() {
            window.location.href = "https://cuploader.charlzk.repl.co/viewspages";
        });

        filesList.addEventListener("click", function() {
            window.location.href = "https://cuploader.charlzk.repl.co/storageitems";
        });
    </script>
</body>
</html>